generator client {
  provider = "prisma-client"
  output   = "../.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Room {
  id        String    @id @default(uuid())
  name      String
  capacity  Int
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([id])
}

model Booking {
  id        String   @id @default(uuid())
  roomId    String
  userId    String
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([userId])
  @@index([startTime])
  @@index([endTime])
}
